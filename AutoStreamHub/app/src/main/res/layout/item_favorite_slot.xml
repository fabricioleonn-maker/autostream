<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="4dp" app:cardBackgroundColor="#1E1E1E" app:cardCornerRadius="12dp">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:orientation="vertical">
        <ImageView android:id="@+id/ivIcon" android:layout_width="64dp" android:layout_height="64dp" />
        <TextView android:id="@+id/tvName" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="#E0E0E0" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
